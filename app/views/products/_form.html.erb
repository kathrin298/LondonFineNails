<%= simple_form_for([category, product]) do |f| %>
  <%= f.input :name %>
  <%= f.input :brand %>
  <%= f.input :sku %>
  <%= f.input :size %>
  <%= f.association :color %>
  <%= f.input :price %>
  <%= f.association :category %>
  <%= f.input :description %>
  <%= f.input :available%>
  <%= f.input :photo, as: :file %>

  <%= f.submit "Submit", class: "btn btn-gold" %>
<% end %>
