<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <a class="navbar-brand" href=<%= root_path %>>
    <p>LondonFineNails</p>
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href=<%= root_path %>>Home</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#products">Products</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#about-us">About us</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#contact">Contact</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">FAQ</a>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag "user.svg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% if current_user.shopping_bag.total_items > 0 %>
            <p id="bag-count"><%= current_user.shopping_bag.total_items %></p>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" if current_user.admin %>
            <%= link_to "Shopping Bag", shopping_bag_path(current_user.shopping_bag), class: "dropdown-item shopping_bag" if current_user.shopping_bag%>
            <% if current_user.shopping_bag.total_items > 0 %>
              <p id="bag-count-dropdown" class="dropdown-item"><%= current_user.shopping_bag.total_items %></p>
            <% end %>
            <%= link_to "Orders", orders_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item dropdown">
          <%= image_tag "user.svg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Login", new_user_session_path, class: "dropdown-item"%>
            <div class="dropdown-divider"></div>
            <%= link_to "Signup", new_user_registration_path, class: "dropdown-item" %>
          </div>
        </li>
        </li>
      <% end %>
    </ul>
  </div>
</div>
