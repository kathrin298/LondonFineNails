<div class="container mt-3">
  <h1>Admin Dashboard</h1>
  <br>
  <%= link_to 'Add new category', new_category_path, class: "btn btn-gold" %>
  <h2>All Categories</h2>
  <ul>
    <% @categories.each do |category| %>
      <li>
        <%= category.name %>
        <%= link_to edit_category_path(category) do %>
          <i class="fas fa-pen"></i>
        <% end %>
        <%= link_to category_path(category), method: :delete do %>
        <i class="fas fa-trash"></i>
      <% end %>
      </li>
    <% end %>
  </ul>
  <br>
  <%= link_to 'Add new product', new_product_path, class: "btn btn-gold" %>
  <h2>All Products</h2>
  <ul>
    <% @products.each do |product| %>
      <li>
      <%= link_to product.name, product_path(product) %>
      <%= link_to edit_product_path(product) do %>
        <i class="fas fa-pen"></i>
      <% end %>
      <%= link_to product_path(product), method: :delete do %>
        <i class="fas fa-trash"></i>
      <% end %>
      </li>
    <% end %>
  </ul>
</div>
