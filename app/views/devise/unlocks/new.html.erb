<div class="container">
  <div class="row my-5">
    <div class="col-12 col-sm-6 col-md-4 center-form">

      <h2 style="font-family:'GFS Didot', 'sans-serif';">Resend unlock instructions</h2>

      <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <%= f.full_error :unlock_token %>

        <div class="form-inputs font-100">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Resend unlock instructions", class: "btn btn-gold" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
